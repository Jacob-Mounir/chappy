{
  "name": "chappy",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && cross-env PORT=5001 npm run dev:backend",
    "build": "npm run build --workspaces"
  },
  "devDependencies": {
    "@types/node": "^22.8.7",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "add": "^2.0.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "popover": "^2.4.1",
    "shadcn-ui": "^0.9.2",
    "tailwind-merge": "^2.5.4"
  }
}
